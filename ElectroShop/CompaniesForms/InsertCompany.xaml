<Window x:Class="ElectroShop.CompaniesForms.InsertCompany"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectroShop.CompaniesForms"
        mc:Ignorable="d"
        Title="InsertCompany" MinHeight="240" MinWidth="300" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <StackPanel>
        <Label Content="ID" Margin="3"/>
        <TextBox x:Name="ID" MaxLength="6" Margin="3"/>
        <Label Content="Name" Margin="3"/>
        <TextBox x:Name="Name" MaxLength="40" Margin="3"/>
        <Label Content="Address" Margin="3"/>
        <TextBox x:Name="Address" MaxLength="40" Margin="3"/>
        <Button x:Name="InsertNew" Content="Добавить" Margin="3" Click="InsertNew_Click"/>
        <Button x:Name="Cancel" Content="Отмена" Margin="3" Click="Cancel_Click"/>
    </StackPanel>
</Window>
